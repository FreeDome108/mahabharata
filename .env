# Environment Configuration for Mahabharata Client
# Демо стенд для flutter_magento

# ===========================================
# MAGENTO CONFIGURATION
# ===========================================

# Demo Magento Environment
MAGENTO_BASE_URL=https://luma-demo.scandipwa.com/
MAGENTO_API_VERSION=v1
MAGENTO_STORE_CODE=default

# Demo API Credentials (for testing)
MAGENTO_CONSUMER_KEY=demo_consumer_key
MAGENTO_CONSUMER_SECRET=demo_consumer_secret

# Demo Customer Credentials (for testing)
MAGENTO_DEMO_EMAIL=demo@example.com
MAGENTO_DEMO_PASSWORD=demo123

# ===========================================
# CLOUD FEATURES
# ===========================================

# Enable cloud features by default for demo
CLOUD_ENABLED=true

# API Timeouts
API_TIMEOUT=30000
API_RECEIVE_TIMEOUT=30000

# ===========================================
# PRODUCT CONFIGURATION
# ===========================================

# Product Types for Mahabharata content
MAHABHARATA_SEASON_TYPE=mahabharata_season
MAHABHARATA_EPISODE_TYPE=mahabharata_episode

# Default Currency
DEFAULT_CURRENCY=USD

# ===========================================
# DEMO SPECIFIC SETTINGS
# ===========================================

# Demo mode settings
DEMO_MODE=true
DEMO_PURCHASES_ENABLED=false
DEMO_SYNC_ENABLED=true

# Demo content settings
DEMO_MAX_SEASONS=10
DEMO_MAX_EPISODES_PER_SEASON=20

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Debug settings
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Cache settings
CACHE_ENABLED=true
CACHE_EXPIRATION_DAYS=7

# ===========================================
# SECURITY SETTINGS
# ===========================================

# API Headers
API_KEY_HEADER=X-API-Key
API_VALUE=mahabharata-native-client

# Device Info Header
DEVICE_INFO_HEADER=X-Device-Info

# ===========================================
# ENDPOINTS CONFIGURATION
# ===========================================

# Magento API Endpoints
ENDPOINT_AUTH=/rest/V1/integration/customer/token
ENDPOINT_PRODUCTS=/rest/V1/products
ENDPOINT_ORDERS=/rest/V1/mahabharata/orders/create
ENDPOINT_PAYMENTS=/rest/V1/mahabharata/payments/process
ENDPOINT_PROGRESS=/rest/V1/mahabharata/progress
ENDPOINT_QUANTUM_SYNC=/rest/V1/mahabharata/quantum-sync
ENDPOINT_DOWNLOAD=/rest/V1/mahabharata/episode/{id}/download

# ===========================================
# LOCALIZATION
# ===========================================

# Supported Languages
SUPPORTED_LANGUAGES=en,ru,hi,sa
DEFAULT_LANGUAGE=en

# ===========================================
# ANANTASOUND INTEGRATION
# ===========================================

# AnantaSound Configuration
ANANTASOUND_ENABLED=true
DOME_RADIUS=10.0
DOME_HEIGHT=5.0
QUANTUM_UNCERTAINTY=0.1

# ===========================================
# NOTES
# ===========================================
# 
# Этот файл содержит конфигурацию для демо стенда flutter_magento
# Используется https://luma-demo.scandipwa.com/ как демо сервер
# 
# Для продакшн использования замените:
# - MAGENTO_BASE_URL на ваш реальный URL
# - MAGENTO_CONSUMER_KEY и MAGENTO_CONSUMER_SECRET на реальные ключи
# - DEMO_MODE=false
# - DEBUG_MODE=false
#
# ===========================================
